<config>
    <tabs>
        <yk_tab module="adminhtml">
            <label>YK</label>
            <sort_order>100</sort_order>
        </yk_tab>
    </tabs>
    <sections>
        <yk_config translate="label" module="yk_asc">
            <label>Sizing Charts</label>
            <tab>yk_tab</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <asc translate="label">
                    <label>Remote resource options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                    <fields>
                        <url translate="label">
                            <label>Url of remote source</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </url>
                        <container translate="label">
                            <label>Chart Container</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </container>
                    </fields>
                </asc>
            </groups>
        </yk_config>
    </sections>
</config>
